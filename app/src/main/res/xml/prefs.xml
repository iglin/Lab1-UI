<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="@string/pref_general"
        android:key="pref_key_storage_settings">
        <EditTextPreference
            android:defaultValue="Default song la la la"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Sound"
            android:key="edit_text_preference_1" />
        <SwitchPreference
            android:defaultValue="false"
            android:title="Notifications"
            android:key="switch_preference_1" />

        <yuku.ambilwarna.widget.AmbilWarnaPreference
            android:key="your_preference_key"
            android:defaultValue="0xff6699cc"
            app:supportsAlpha="true"
            android:title="Pick a color with alpha" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_ad"
        android:key="pref_key_storage_settings">
        <SwitchPreference
            android:defaultValue="false"
            android:title="Instant buy"
            android:key="switch_preference_1" />

        <Preference
            android:key="btnDateFilter"
            android:summary="11.11.2011"
            android:title="Today" />
    </PreferenceCategory>
</PreferenceScreen>